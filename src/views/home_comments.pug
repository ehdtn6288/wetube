extends layouts/main
include mixins/videoBlock

block content
    .home-videos#home

        .videos__title
           span Latest
           .select
                select(name="range", id = "range", onchange="location.href=this.value")
                    option(value="") 정렬
                    option(value=`/`) 날짜순
                    option(value=`/range-views`) 조회수
                    option(value=`/range-comments` selected) 댓글순
             
        .videos__latestVideos        
            

            

            each item in videos_totalComments_sorted
                +videoBlock({
                    id : item.id,
                    title : item.title,
                    fileUrl : item.fileUrl,
                    views : item.views ,  
                    creatorName : item.creator.name,
                    avatarUrl : item.creator.avatarUrl,
                    duration : item.duration,     
                    creatorId : item.creator.id,
                    createdAt : item.createdAt,
                    totalComments:item.totalComments
                })
                       
