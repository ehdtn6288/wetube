mixin videoPlayer(video={})
    .videoPlayer#jsVideoContainer
        video(id="my-video" class="video-js vjs-big-play-centered"  playsinline controls=false poster="" preload="metadata")   
            source(src=`${video.src}#t=0.0001` type="video/mp4")#jsVideoSource
            source(src=`${video.src}#t=0.0001` type="video/webm")
            source(src=`${video.src}#t=0.0001` type="video/ogg")
           
        //- video(src=video.src)#jsVideoPlayer
        .videoPlayer__controls#jsVideoControlBox
            .videoPlayer__column
                .videoPlayer-playRange
                   input#jsVideoPlayRange(type="range")
            .videoPlayer__column
                .videoPlayer-playBtn
                    span#jsVideoPlayBtn
                        i.fas.fa-play
                .videoPlayer-time
                    span
                        span#currentTime 00:00:00 
                        span &nbsp  / &nbsp 
                        span#totalTime 00:00:00
                .videoPlayer-volume#volumeBox
                    div.volumeRange__wrapper#jsVolumneRageWrapper
                        input#jsVolumbRange(type="range", min="0", max="1", step="0.1", value="0.5")
                    span#jsVideoVolumeBtn
                        i.fas.fa-volume-up
                
                
                .videoPlayer-expandBtn               
                    span#jsVideoFullscreenBtn
                        i.fas.fa-expand